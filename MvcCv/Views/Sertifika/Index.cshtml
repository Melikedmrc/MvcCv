@using MvcCv.Models.Entity;
@model List<TblSertifikalarım>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    int sayac = 0;
    string[] renkler = { "success", "warning" }; // success=yeşil, warning=sarı
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-2">
                    </div><!-- /.card-header -->

                    <div class="card-body">
                        <div class="tab-pane" id="timeline">
                            <div class="timeline timeline-inverse">
                                <!-- timeline time label -->
                                @foreach (var x in Model)
                                {
                                    var renk = renkler[sayac % renkler.Length]; // sırayla renk seç
                                    sayac++;
                                    <div class="time-label">
                                        <a href="/Sertifika/SertifikaGetir/@x.ID" class="btn bg-@renk">
                                            <span class="bg-@renk">
                                                @x.Tarih
                                            </span>
                                        </a>
                                    </div>

                                    <!-- /.timeline-label -->
                                    <!-- timeline item -->
                                    <div>
                                        <i class="fas fa-comment bg-primary"></i>
                                        <div class="timeline-item">
                                            <div class="timeline-body">
                                                @x.Aciklama
                                            </div>
                                        </div>
                                    </div>
                                }
                                <!-- /.timeline item -->
                            </div>
                            <a href="/Sertifika/YeniSertifika" class="btn btn-info">Yeni Sertifika Girişi</a>
                        </div>
                    </div><!-- /.card-body -->
                </div><!-- /.card -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section>
</body>
</html>
