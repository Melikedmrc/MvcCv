@model MvcCv.Models.Entity.TblSertifikalarım
@{
    ViewBag.Title = "SertifikaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Sertifika Düzenleme Sayfası</h4>
<br />
<form class="form-group" method="post">
    @Html.Label("Tarih ")
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    @Html.Label("Sertifika Açıklaması")
    @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Güncelle</button>
    <a href="/Sertifika/SertifikaSil/@Model.ID" class="btn btn-danger">Sil</a>

</form>

