@using MvcCv.Models.Entity;
@model List<TblYeteneklerim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    string renk = "";
    string labelrenk = "";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Yeteneklerim/YeniYetenek" class="btn btn-info">Yeni Yetenek Ekle</a>
                                <br /><br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            if (x.Oran <= 50)
                                            {
                                                renk = "bg-danger";
                                                labelrenk = "badge bg-danger";
                                            }
                                            else if (x.Oran > 50 && x.Oran <= 70)
                                            {
                                                renk = "bg-warning";
                                                labelrenk = "badge bg-warning";
                                            }
                                            else if (x.Oran > 70 && x.Oran <= 85)
                                            {
                                                renk = "bg-info";
                                                labelrenk = "badge bg-info";
                                            }
                                            else
                                            {
                                                renk = "bg-success";
                                                labelrenk = "badge bg-success";
                                            }

                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.Yetenek</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@renk" style="width: @x.Oran%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelrenk">@x.Oran%</span></td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/Yeteneklerim/YetenekDuzenle/@x.ID">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Düzenle
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Yeteneklerim/YetenekSil/@x.ID">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Sil
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>